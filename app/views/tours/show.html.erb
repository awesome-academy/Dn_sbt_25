<div class="news">
  <div class="container">
    <div class="row">
      <!-- News Posts -->
      <div class="col-lg-9">
        <div class="news_posts">
          <!-- News Post -->
          <div class = "form_padding">
            <div class="news_post">
              <div class="post_title"><%= link_to @tour.name ,tour_url %></div>
                <div class="post_meta">
                  <ul>
                    <li><%= l @tour.created_at, format: Settings.format_time %></li>
                  </ul>
                </div>
                <div class="post_text">
                  <p>Place: <%= @tour.place %></p>
                </div>
                <div class="post_image">
                  <img src="/assets/news_1.jpg" alt="https://unsplash.com/@simonmigaj">
                  <%= link_to t(".book"), new_booking_path(tour_id: @tour.id), class: "post_image_box text-center" %>
                </div>
                <div class="post_text">
                  <p><%= @tour.description %></p>
                </div>
                <div class="post_text">
                  <p><%= @tour.detail %></p>
                </div>
                <div class="post_text">
                  <p>Price: <%= @tour.price %></p>
                </div>
                <div class="post_text">
                  <p>Start time: <%= l @tour.start_time, format: Settings.format_time %></p>
                </div>
                <div class="post_text">
                  <p>Finish time: <%= l @tour.finish_time, format: Settings.format_time %></p>
                </div>
              </div>
            </div>
          </div>
          <!--/News Post -->
        </div>
      </div>
    </div>
  </div>
</div>
