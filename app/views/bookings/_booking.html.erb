<tr>
  <td><%= booking.tour_name %></td>
  <td><%= booking.tour_place %></td>
  <td><%= number_to_currency currency(booking.tour_price) %></td>
  <td><%= l booking.tour_start_time, format: Settings.format_time %></td>
  <td><%= l booking.tour_finish_time, format: Settings.format_time %></td>
  <td><%= booking.status %></td>
  <td><%= l booking.created_at, format: Settings.format_time %></td>
  <td>
    <% if booking.pending? %>
      <%= link_to t(".btn_cancel"), booking_path(booking), method: :delete, data: {confirm: t(".confirm")} %>
    <% end %>
  </td>
</tr>
