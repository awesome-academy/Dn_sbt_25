<% provide(:title, t(".title")) %>
<div class = "form_padding">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <h1><%= t(".manager_category") %></h1>
      <%= link_to t(".btn_create"), new_admin_category_path %>
      <table class="table">
        <thead>
          <tr>
            <th><%= t(".name") %></th>
            <th><%= t(".options") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @categories %>
        </tbody>
      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>
