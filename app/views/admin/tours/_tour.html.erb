<tr>
  <td><%= tour.name %></td>
  <td><%= tour.place %></td>
  <td><%= number_to_currency currency(tour.price) %></td>
  <td><%= l tour.start_time, format: Settings.format_time %></td>
  <td><%= enum_l(tour, :status) %></td>
  <td><%= link_to t(".btn_detail"), admin_tour_path(tour) %></td>
  <td><%= link_to t(".btn_edit"), edit_admin_tour_path(tour)%></td>
  <td><%= link_to t(".btn_delete"), admin_tour_path(tour), method: :delete, data: {confirm: t(".confirm")} %></td>
</tr>
