<div class = "form_padding">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-4">
      <p><%= t(".name") %>: <%= @tour.name %></p>
      <p><%= t(".place") %>: <%= @tour.place %></p>
      <p><%= t(".price") %>: <%= number_to_currency currency(@tour.price) %></p>
      <p><%= t(".start_time") %>: <%= l @tour.start_time, format: :short %></p>
      <p><%= t(".finisht_time") %>: <%= l @tour.finish_time, format: :short %></p>
      <p><%= t(".status") %>: <%= enum_l(@tour, :status ) %></p>
      <p><%= t(".category") %>: <%= @tour.category.name %></p>
      <%= image_tag @tour.picture.url, size: Settings.size_img.tour %>
    </div>
  </div>
</div>
