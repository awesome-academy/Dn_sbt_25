<% provide(:title, t(".title")) %>
<!-- Home -->
<div class="home">
  <div class="home_background" style="background-image:url(/assets/home.jpg)"></div>
  <div class="home_content">
    <div class="home_content_inner">
      <div class="home_text_large">discover</div>
      <div class="home_text_small">Discover new worlds</div>
    </div>
  </div>
</div>
<!-- Find Form -->
<div class="find">
  <!-- Image by https://unsplash.com/@garciasaldana_ -->
  <div class="find_background parallax-window" data-parallax="scroll" data-image-src="/assets/find.jpg" data-speed="0.8"></div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="find_title text-center"><%= t (".txtFind")%></div>
      </div>
      <div class="col-12">
       <div class="find_form_container">
          <form action="#" id="find_form" class="find_form d-flex flex-md-row flex-column align-items-md-center align-items-start justify-content-md-between justify-content-start flex-wrap">
            <div class="find_item">
              <div><%= t (".txtDestination") %>:</div>
              <input type="text" class="destination find_input" required="required" placeholder="Keyword here">
            </div>
            <div class="find_item">
            <div><%= t (".txtAdventureType") %>:</div>
              <select name="adventure" id="adventure" class="dropdown_item_select find_input">
                <option>Categories</option>
                <option>Categories</option>
                <option>Categories</option>
              </select>
            </div>
            <div class="find_item">
              <div><%= t (".txtMinPrice") %></div>
              <select name="min_price" id="min_price" class="dropdown_item_select find_input">
                <option>&nbsp;</option>
                <option>Price</option>
                <option>Price</option>
              </select>
            </div>
            <div class="find_item">
              <div><%= t (".txtMaxPrice") %></div>
              <select name="max_price" id="max_price" class="dropdown_item_select find_input">
                <option>&nbsp;</option>
                <option>Price</option>
                <option>Price</option>
              </select>
            </div>
            <button class="button find_button"><%= t (".btnFind") %></button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Top Destinations -->
<div class="top">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="section_title text-center">
          <h2><%= t (".txtTopRate") %></h2>
        </div>
      </div>
    </div>
    <!--TOP RATED -->
    <div class="row top_content">
      <% @top_rates.each do |top_rate| %>
        <div class="col-lg-3 col-md-6 top_col">
          <div class="top_item">
            <%= link_to tour_url(top_rate) do %>
              <div class="top_item_image"><%= image_tag "/assets/top_1.jpg" %></div>
              <div class="top_item_content">
                <div><%= top_rate.score %></div>
                <div class="top_item_price">$<%= top_rate.price %></div>
                <div class="top_item_text"><%= top_rate.place %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <!--/ TOP RATED -->
  </div>
</div>
<div class="popular">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="section_title text-center">
          <h2><%= t (".txtTopBooking") %></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="popular_content d-flex flex-md-row flex-column flex-wrap align-items-md-center align-items-start justify-content-md-between justify-content-start">
        <!-- Top view -->
        <% @top_views.each do |top_view| %>
          <div class="popular_item">
            <%= link_to tour_url(top_view) do %>
              <img src="/assets/popular_1.jpg" alt="image by Egzon Bytyqi">
              <div class="popular_item_content">
                <div class="popular_item_price">From $<%= top_view.price %></div>
                <div class="popular_item_title"><%= top_view.place %></div>
              </div>
            <% end %>
          </div>
        <% end %>
        <!-- /Top view -->
        </div>
      </div>
    </div>
  </div>
</div>
